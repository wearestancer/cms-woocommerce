{
    "name": "stancer/cms-woocommerce",
    "description": "Stancer Woocommerce payment plugin",
    "type": "wordpress-plugin",
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "installer-name": "stancer"
    },
    "autoload": {
        "classmap": [
            "includes/",
            "vendor-prefixer/"
        ]
    },
    "scripts": {
        "after:scoping":"bash ./scripts/clean-after-archives.sh && composer require stancer/stancer:^1.0",
        "phpstan": "./vendor/bin/phpstan",
        "prefix-stancer": "bash ./scripts/class-prefixer.sh",
        "prep-vendor": "vendor/bin/php-scoper add-prefix -nf && composer remove stancer/stancer",
        "scope:dependency": "composer run prep-vendor && composer run prefix-stancer && composer install --no-dev --optimize-autoloader"
    },
    "require": {
        "stancer/stancer": "^1.0"
    },
    "require-dev": {
        "humbug/php-scoper": "^0.18.7",
        "php-stubs/woocommerce-stubs": "^8.0",
        "simplesecurewp/php-stubs-woocommerce-subscriptions": "dev-main",
        "wp-coding-standards/wpcs": "^3.0"
    }
}
