{
	"name": "WooCommerce",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"editorconfig.editorconfig",
				"shevaua.phpcs",
				"stylelint.vscode-stylelint",
				"xdebug.php-debug"
			],
			"settings": {
				"editor.rulers": [
					120
				],
				"intelephense.stubs": [
					"vendor/php-stubs/woocommerce-stubs",
					"apache",
					"bcmath",
					"bz2",
					"calendar",
					"com_dotnet",
					"Core",
					"ctype",
					"curl",
					"date",
					"dba",
					"dom",
					"enchant",
					"exif",
					"FFI",
					"fileinfo",
					"filter",
					"fpm",
					"ftp",
					"gd",
					"gettext",
					"gmp",
					"hash",
					"iconv",
					"imap",
					"intl",
					"json",
					"ldap",
					"libxml",
					"mbstring",
					"meta",
					"mysqli",
					"oci8",
					"odbc",
					"openssl",
					"pcntl",
					"pcre",
					"PDO",
					"pdo_ibm",
					"pdo_mysql",
					"pdo_pgsql",
					"pdo_sqlite",
					"pgsql",
					"Phar",
					"posix",
					"pspell",
					"random",
					"readline",
					"Reflection",
					"session",
					"shmop",
					"SimpleXML",
					"snmp",
					"soap",
					"sockets",
					"sodium",
					"SPL",
					"sqlite3",
					"standard",
					"superglobals",
					"sysvmsg",
					"sysvsem",
					"sysvshm",
					"tidy",
					"tokenizer",
					"wordpress",
					"xml",
					"xmlreader",
					"xmlrpc",
					"xmlwriter",
					"xsl",
					"Zend OPcache",
					"zip",
					"zlib"
				],
				"php.validate.executablePath": "/usr/local/bin/php"
			}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"forwardPorts": [
		8080
	],
	"postAttachCommand": "git config filter.locales.smudge \"./scripts/locales/smudge.sh %f\" && git config filter.locales.clean \"./scripts/locales/clean.sh\" && pnpm install",
	"portsAttributes": {
		"9003": {
			"label": "xdebug"
		}
	}
}
